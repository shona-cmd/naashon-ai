{
  "name": "naashon-ai",
  "displayName": "AI Coding Assistant",
  "description": "AI-powered coding assistant for VS Code. Generate, explain, refactor, and optimize code using advanced AI models.",
  "version": "0.0.1",
  "publisher": "naashon",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "keywords": [
    "ai",
    "coding",
    "assistant",
    "gpt",
    "openai",
    "code generation",
    "code explanation",
    "refactor",
    "optimize",
    "productivity"
  ],
  "bugs": {
    "url": "https://github.com/naashon/ai-coding-assistant/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/naashon/ai-coding-assistant.git"
  },
  "homepage": "https://github.com/naashon/ai-coding-assistant",
  "license": "MIT",
  "pricing": "Free",
  "activationEvents": [
    "onCommand:naashon-ai.generateCode",
    "onCommand:naashon-ai.explainCode",
    "onCommand:naashon-ai.refactorCode",
    "onCommand:naashon-ai.optimizeCode",
    "onCommand:naashon-ai.addComments",
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "naashon-ai.generateCode",
        "title": "AI: Generate Code",
        "category": "AI"
      },
      {
        "command": "naashon-ai.explainCode",
        "title": "AI: Explain Code",
        "category": "AI"
      },
      {
        "command": "naashon-ai.refactorCode",
        "title": "AI: Refactor Code",
        "category": "AI"
      },
      {
        "command": "naashon-ai.optimizeCode",
        "title": "AI: Optimize Performance",
        "category": "AI"
      },
      {
        "command": "naashon-ai.addComments",
        "title": "AI: Add Comments",
        "category": "AI"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "naashon-ai.generateCode",
          "when": "editorTextFocus",
          "group": "navigation"
        },
        {
          "command": "naashon-ai.explainCode",
          "when": "editorTextFocus && editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "naashon-ai.refactorCode",
          "when": "editorTextFocus && editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "naashon-ai.optimizeCode",
          "when": "editorTextFocus && editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "naashon-ai.addComments",
          "when": "editorTextFocus && editorHasSelection",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "naashon-ai.generateCode",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "editorTextFocus"
      },
      {
        "command": "naashon-ai.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "naashon-ai.refactorCode",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "naashon-ai.optimizeCode",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "naashon-ai.addComments",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus && editorHasSelection"
      }
    ],
    "configuration": {
      "title": "AI Coding Assistant",
      "properties": {
        "ai-coding-assistant.apiKey": {
          "type": "string",
          "description": "Your OpenAI API key for accessing AI services",
          "order": 1
        },
        "ai-coding-assistant.model": {
          "type": "string",
          "description": "AI model to use for code generation",
          "default": "gpt-3.5-turbo",
          "enum": [
            "gpt-3.5-turbo",
            "gpt-4",
            "gpt-4-turbo-preview"
          ],
          "order": 2
        },
        "ai-coding-assistant.temperature": {
          "type": "number",
          "description": "Temperature for AI responses (0.0-1.0). Lower values are more focused, higher values are more creative.",
          "default": 0.7,
          "minimum": 0,
          "maximum": 1,
          "order": 3
        }
      }
    }
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#6366f1",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/visual-studio-marketplace/v/naashon.ai-coding-assistant",
      "href": "https://marketplace.visualstudio.com/items?itemName=naashon.ai-coding-assistant",
      "description": "Visual Studio Marketplace Version"
    },
    {
      "url": "https://img.shields.io/github/stars/naashon/ai-coding-assistant",
      "href": "https://github.com/naashon/ai-coding-assistant",
      "description": "GitHub Stars"
    }
  ],
  "markdown": "github",
  "qna": "marketplace",
  "scripts": {
    "lint": "eslint extension.js",
    "lint:fix": "eslint extension.js --fix",
    "build": "echo 'No build step required for JavaScript extension'",
    "package": "vsce package",
    "publish": "vsce publish",
    "publish:patch": "vsce publish patch",
    "publish:minor": "vsce publish minor",
    "publish:major": "vsce publish major",
    "test": "echo 'No tests specified'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "axios": "^1.13.4",
    "eslint": "^9.39.2"
  }
}
